 <div class= 'fixed_header'>
<nav>
  <ul>
    <li class='left-nav' id='home_icon'>
      <%= link_to 'चतुरङ्ग', root_path %>
    </li>
    <li class='left-nav'>
      <%= link_to 'chess is', about_path %>
    </li>
    <li class='left-nav'>
      <%= link_to 'explore games', games_path %>
    </li>
    <li class='left-nav'>
      <% num = Game.count %>
      <% rand = (1..num).to_a.sample %>
      <%= link_to 'random game', "/games/#{rand}" %>
    </li>

      <% if session[:user_id].nil? %>
      <li class='left-nav'>
        <%= link_to 'login', '/auth/google_oauth2' %>
      </li>
      <% else %>
      <li class='left-nav'>
      <%= link_to 'dashboard', user_path(User.find(session[:user_id])) %>
      </li>
        <li class='left-nav'>
        <%= link_to 'logout', '/logout' %>
      </li>


      <% end %>

    <li class='right-nav'>
      <div id="search">
            <%= form_tag '/search', :method => 'get' do %>
            <%= text_field_tag :search, params[:search], :id => 'search_field' %>
            <%= submit_tag "Search", :name => nil %>
            <% end %>
      </div>
    </li>
  </ul>

</nav>
</div>
